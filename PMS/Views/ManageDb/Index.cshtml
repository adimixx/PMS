@model List<PMS.Models.Database.DbBackupRecord>

@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-body">
        <h4>Backup Records</h4>
        <table class="table table-striped table-active">
            <thead>
                <tr>
                    <th>
                        Backup Date
                    </th>
                    <th>
                        Backup Type
                    </th>
                    <th>
                        Performed By
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.BackupDate
                        </td>
                        <td>
                            @item.BackupType
                        </td>
                        <td>
                            @item.User.name (@item.User.email)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a href="@Url.Action("AddBackup")" class="btn btn-info">
    New Backup
</a>