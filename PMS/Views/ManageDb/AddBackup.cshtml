@model PMS.Models.DbBackupViewModel

@{
    ViewBag.Title = "New Database Backup";
    Layout = "~/views/shared/_LayoutAdmin.cshtml";
}

<h2>Create New Backup</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>New Database Backup</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedBackupType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedBackupType, Model.BackupList, htmlAttributes: new Dictionary<string, object> { { "class", "form-control" } })
                @Html.ValidationMessageFor(model => model.SelectedBackupType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
