@using PMS.Models

<div class="cover-profile">
    <img src="~/src/img/cover-default.jpg" id="cover-photo" />
    <div id="studio-profile-img"><img class="rounded-circle" style="width: 90%;margin: 10.2px;" src="@User.Identity.GetProfilePhotoLink()"></div>
    <div id="studio-head">
        <h2 style=""> @Model.name </h2>
        <p class="mb-0">
            <span style="position: relative; top: -6px; font-weight: 500;"> @Model.shortDesc </span>
            <br>
            <span style="color:#9F9F9F;font-weight:500">
                <i class="ti-location-pin"></i> @Model.location &nbsp;&nbsp;
                <i class="ti-facebook"></i> Adi Iman &nbsp;&nbsp;
                <i class="ti-instagram"></i> adi_iman10 &nbsp;&nbsp;
                <i class="ti-twitter-alt"></i> trixxboy &nbsp;&nbsp;
            </span>
        </p>
    </div>
</div>
<div class="body-profile">
    <div class="row">
        <div class="col-md-2 col-12">
            <div class="row">
                <div class="col-12">
                    <span class="mdi mdi-phone"> &nbsp; @Model.phoneNum</span> <br>
                    <span style="line-height:2.5;" class="mdi mdi-email"> &nbsp;<a href="">@Model.email</a></span>
                </div>
                <div class="col-12">
                    <button class="chatbtn"><i class="mdi mdi-chat"></i> Chat</button>
                </div>
            </div>
        </div>
        <div class="col-md-10 col-12">
            @if (!string.IsNullOrWhiteSpace(Model.longDesc))
            {
                <h3 class="pb-2">Bio</h3>
                <p>
                    @Model.longDesc
                </p>
            }
        </div>
    </div>
</div>
