    <script src="https://cdn.jsdelivr.net/npm/readmore-js@2.2.1/readmore.min.js"></script>

    <script>
        var bricklayer = new Bricklayer(document.querySelector('#brick'))

        $('article.card-text').readmore({
            speed: 75,
            lessLink: '<a href="#">Read less</a>'
        });

    </script>
}