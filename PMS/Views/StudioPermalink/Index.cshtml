@model PMS.Models.Database.Studio
@using PMS.Models

@{
    ViewBag.Title = Model.name;

    if (ViewBag.StudioRoleID != null)
    {
        Layout = "~/views/shared/_LayoutStudioManage.cshtml";
    }
}

@section styles {
    <style>
        .bricklayer-column {
            padding-left: 0 !important;
            padding-right: 25px !important;
        }

        @@media screen and (min-width: 1200px) {
            .bricklayer-column-sizer {
                /* divide by 3. */
                width: 33.3%;
            }
        }

        @@media screen and (min-width: 900px) {
            .bricklayer-column-sizer {
                /* divide by 2. */
                width: 33.3%;
            }
        }

        @@media (max-width: 768px) {
            .carousel-inner .carousel-item > div {
                display: none;
            }

                .carousel-inner .carousel-item > div:first-child {
                    display: block;
                }
        }

        .carousel-inner .carousel-item.active, .carousel-inner .carousel-item-next, .carousel-inner .carousel-item-prev {
            display: flex;
        }

        /* display 3 */
        @@media (min-width: 768px) {

            .carousel-inner .carousel-item-right.active,
            .carousel-inner .carousel-item-next {
                transform: translateX(33.333%);
            }

            .carousel-inner .carousel-item-left.active,
            .carousel-inner .carousel-item-prev {
                transform: translateX(-33.333%);
            }
        }

        .carousel-inner .carousel-item-right,
        .carousel-inner .carousel-item-left {
            transform: translateX(0);
        }
    </style>
}

<div class="cover-profile">
    <img src="~/src/img/cover-default.jpg" id="cover-photo" />
    <div id="studio-profile-img"><img class="rounded-circle" style="width: 90%;margin: 10.2px;" src="@User.Identity.GetProfilePhotoLink()"></div>
    <div id="studio-head">
        <h2 style=""> @Model.name </h2>
