@model PMS.Models.Database.JobDate

@{
    Layout = "~/Views/Shared/_LayoutStudioManage.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4>Update Job Description</h4>
            <hr />
            <form action="~/@ViewBag.StudioUrl/job/changedate" method="post">
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.id, new { @Value = Model.id })
                @Html.HiddenFor(x => x.jobid, new { @Value = Model.jobid })
                <div class="form-group">
                    <input type="date" name="jobdate" class="form-control" value="@Model.jobdate1.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group">
                    <input type="time" name="jobtime" class="form-control" value="@Model.jobdate1.TimeOfDay" />
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.description, new { @class = "form-control", type = "text", placeholder = "Description..." })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.location, new { @class = "form-control", type = "text", placeholder = "Location..." })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

