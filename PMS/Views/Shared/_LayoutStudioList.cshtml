@model List<PMS.Models.Database.UserStudio>

@foreach (var item in Model)
{
    var profileImage = (item.Studio.ImgLogo == null) ? "https://storagephotog2.blob.core.windows.net/studio-data/default/default-profile.jpg" : String.Format("https://storagephotog2.blob.core.windows.net/studio-data/{0}/{1}", item.studioid, item.Studio.ImgLogo);

    <li>
        <a class="homeref" href="/@item.Studio.uniquename"><img class="rounded-circle" style=" position: relative; top: -1.4px;margin-right: 3px;" src="@profileImage" width="15" alt="Alternate Text" /> @item.Studio.name</a>
    </li>
}

@if (Model.Count() == 0)
{
    <li>
        <a class="homeref">no studio</a>
    </li>
}
