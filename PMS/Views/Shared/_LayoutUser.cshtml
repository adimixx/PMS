<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/src/images/favicon.ico">

    @Styles.Render("~/Content/cssUser")
</head>
<body data-topbar="dark" data-layout="vertical">
    <!-- Begin page -->
    <div id="layout-wrapper">
        @Html.Partial("_LayoutTopNav");

        @Html.Partial("_LayoutSidebarNav");

        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquerytemplate")
    @Scripts.Render("~/bundles/bootstraptemplate")
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)
</body>
</html>
