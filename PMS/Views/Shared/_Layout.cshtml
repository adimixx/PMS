<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/src/images/favicon.ico">

    @Styles.Render("~/Content/cssAdmin")

</head>
<body data-topbar="dark">
    <!-- Begin page -->
    <div id="layout-wrapper">
        <div id="app">
            @Html.Partial("_LayoutTopNav")
            <div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquerytemplate")
    @Scripts.Render("~/bundles/bootstraptemplate")
    @Scripts.Render("~/bundles/libscript")
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="~/src/admin/js/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
