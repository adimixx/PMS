@using PMS.Models
<header id="page-topbar">
    <div class="navbar-header">
        <div class="d-flex">
            <!-- LOGO -->
            <div class="navbar-brand-box">
                <a href="@Url.Action("Index", "Home",null)" class="logo logo-dark">
                    <span class="logo-sm">
                        <img src="~/src/img/logo-sm.png" alt="" height="28">
                    </span>
                    <span class="logo-lg">
                        <img src="~/src/img/logo-lg.png" alt="" height="28">
                    </span>
                </a>

                <a href="@Url.Action("Index", "Home",null)" class="logo logo-light">
                    <span class="logo-sm">
                        <img src="~/src/img/logo-sm.png" alt="" height="28">
                    </span>
                    <span class="logo-lg">
                        <img src="~/src/img/logo-lg.png" alt="" height="28">
                    </span>
                </a>
            </div>

            <button type="button" class="btn btn-sm px-3 font-size-24 header-item waves-effect" id="vertical-menu-btn">
                <i class="mdi mdi-menu"></i>
            </button>


        </div>

        <div class="d-flex">
            @if (User.Identity.IsAuthenticated)
            {
                <!-- Avatar-->
                <div class="dropdown d-inline-block">
                    <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="nav-item">@User.Identity.Name</span>
                        <img class="rounded-circle header-profile-user" src="@User.Identity.GetProfilePhotoLink()" alt="Header Avatar">
                    </button>
                    <div class="dropdown-menu dropdown-menu-right pt-0 border-0">
                        <!-- item-->
                        <a class="dropdown-item d-block text-template rounded-top" href="/Home">
                            <i class="mdi mdi-clipboard-account font-size-17 align-middle mr-1 ic-nav"></i> Users
                        </a>
                        <a class="dropdown-item d-block" href="/jobc/jobcustomer">
                            <!--<span class="badge badge-success float-right">11</span>-->
                            <i class="mdi mdi-newspaper-variant font-size-17 align-middle mr-1 ic-nav"></i> Inquiry
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-danger" href="/Account/SignOut">
                            <i class="mdi mdi-power font-size-17 align-middle mr-1 text-danger ic-nav ic-nav"></i> Logout
                        </a>
                    </div>
                </div>
            }

            else
            {
                <nav class="navbar navbar-dark navbar-expand">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="@Url.Action("Register","Account")" class="nav-link">Register</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("SignIn","Account")" class="nav-link">Sign In</a>
                        </li>
                    </ul>
                </nav>
            }

        </div>
    </div>
</header>