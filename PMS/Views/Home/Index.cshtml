@section styles {
    <style>
        @@media screen and (min-width: 1200px) {
            .bricklayer-column-sizer {
                /* divide by 3. */
                width: 33.3%;
            }
        }

        @@media screen and (min-width: 900px) {
            .bricklayer-column-sizer {
                /* divide by 2. */
                width: 50%;
            }
        }
    </style>
}

<div id="page-head" class="row">
    <div class="col-12">
        <center><a href="@Url.Action("Manage","Studio")">Create Studio</a></center>
</div>
</div>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div id="banner-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/src/images/gallery/work-1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/src/images/gallery/work-2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/src/images/gallery/work-3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#banner-carousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#banner-carousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-12 pt-0 pb-0">
                        <img class="d-block w-50" src="~/src/images/gallery/work-6.jpg">
                    </div>
                    <div class="col-12 pt-0">
                        <img class="d-block w-50" src="~/src/images/gallery/work-7.jpg">
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div id="brick" class="bricklayer">
                    <div class="box">
                        test1
                    </div>
                    <div class="box">
                        test2
                    </div>
                    <div class="box">
                        test3
                    </div>
                    <div class="box">
                        test4
                    </div>
                    <div class="box">
                        test5
                    </div>
                    <div class="box">
                        test6
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="//cdnjs.cloudflare.com/ajax/libs/bricklayer/0.4.2/bricklayer.min.js"></script>

        <script>
            var bricklayer = new Bricklayer(document.querySelector('#brick'))
        </script>
    }
