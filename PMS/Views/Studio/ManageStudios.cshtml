@model List<PMS.Models.Database.Studio>

@{
    ViewBag.Title = "Studio";
}

<div>
    <div class="row">
        <div class="col-6 text-left">
            <h3>Studios You Manage</h3>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Create","Studio")">Create New Studio</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <small>No Studios</small>
            }
        </div>
    </div>
</div>

