@model List<PMS.Models.Database.Studio>

@{
    ViewBag.Title = "Studio";
}

<div class="mt-4">
    <div class="row">
        <div class="col-6 text-left">
            <h3>Studios You Manage</h3>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Create","Studio")">Create New Studio</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <small>No Studios</small>
            }
            else
            {
                foreach (var mod in Model)
                {
                    var profileImage = (mod.ImgLogo == null) ? "https://storagephotog.blob.core.windows.net/studio-data/default/default-profile.jpg" : String.Format("https://storagephotog.blob.core.windows.net/studio-data/{0}/{1}", mod.id, mod.ImgLogo);
                    var Location = (mod.City == null) ? mod.State : mod.City + "," + mod.State;

                    <a href="/@mod.uniquename">
                        <div class="d-flex">
                            <img src="@profileImage" style="height: 50px;" class="rounded-circle"/>
                            <div class="mx-3">
                                <h6 class="text-dark">@mod.name</h6>
                                <p class="text-info">@Location</p>
                            </div>                            
                        </div>
                    </a>
                    <hr class="m-1" />
                }
            }
        </div>
    </div>
</div>

@section scripts{

    <script>

    </script>

}
